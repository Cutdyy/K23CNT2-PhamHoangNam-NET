@model List<YourProjectName.Models.AccountViewModel>

@{
    ViewData["Title"] = "Account List";
}

<h2>Danh sách tài khoản</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.Id</td>
                <td>@acc.Name</td>
            </tr>
        }
    </tbody>
</table>
